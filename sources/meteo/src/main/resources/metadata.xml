	<specification name="meteo-service-specification"
		interfaces="appsgate.lig.meteo.Meteo">
	</specification>
    
	<implementation name="YahooMeteoImpl" classname="appsgate.lig.meteo.yahoo.YahooMeteoImplementation" specification="meteo-service-specification">
		<callback onInit="start" onRemove="stop" />
		<definition name="woeid" type="string" field="WOEID" internal="false"/>
        <definition name="location" type="string" field="location" internal="false" method="setLocation"/>
		<definition name="auto-refresh" type="int" field="refreshRate" internal="false"/>
		<definition name="temperature" type="int" field="temperature" internal="false"/>
	</implementation>
   
