<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore-0.0.4.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

    <implementation name="ConfigurableClockImpl"
        classname="appsgate.lig.clock.sensor.impl.ConfigurableClockImpl"
        specification="CoreClockSpec" push="fireClockSetNotificationMsg, fireClockAlarmNotificationMsg">
        <callback onInit="start" onRemove="stop" />




        <!-- device kernel meta data -->
        <definition name="deviceName" 	type="string"  value="Unknown" field="appsgateServiceName" />
        <definition name="deviceId" 	type="string"  value="000000"  field="appsgateObjectId" />

        <!-- device client meta data -->
        <definition name="pictureId" 	type="string" 				   field="appsgatePictureId" />
        <definition name="userType" 	type="string"  value="21" 	   field="appsgateUserType" />
        <definition name="status" 		type="string"  value="2"  	   field="appsgateStatus" />

    </implementation>
</apam>