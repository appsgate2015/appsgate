<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

	<implementation name="SwingColorLightImpl"
		classname="appsgate.lig.colorLight.actuator.swing.impl.SwingColorLightImpl" specification="CoreColorLightSpec" push="notifyChanges">
		<callback onInit="show" onRemove="hide" />
		
		<!-- device kernel meta data -->
		<definition name="deviceName" 		  type="string" value="Unknown" 	   	  field="sensorName"/>
		<definition name="deviceId" 		  type="string" value="000000"		   	  field="sensorId"/>
		<definition name="deviceType" 		  type="string" value="PHILIPS_HUE_LIGHT" field="sensorType"/>
		
		<!-- device client meta data -->
		<definition name="pictureId" 		  type="string"			 			   field="pictureId"/>
		<definition name="userType" 		  type="string" value="7" 			   field="userType"/>
		<definition name="status" 			  type="string" value="2" 			   field="status"/>
				
	</implementation>

</apam>