<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>device-mockups</artifactId>
        <groupId>appsgate.components</groupId>
        <version>1.0.0</version>
    </parent>

    <groupId>appsgate.lig.mockup</groupId>
    <artifactId>SwingARD</artifactId>
    <version>1.0.0</version>
    <packaging>bundle</packaging>

    <name>SwingARD</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>appsgate.components</groupId>
            <artifactId>CoreKeyCardSensorSpec</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.felix</groupId>
            <artifactId>org.apache.felix.ipojo.annotations</artifactId>
            <version>${ipojo.annotations.version}</version>
        </dependency>
        <dependency>
            <groupId>appsgate.components</groupId>
            <artifactId>UbikitAdapter</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>appsgate.components</groupId>
            <artifactId>CoreObjectSpec</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.3.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.ow2.bundles</groupId>
            <artifactId>ow2-bundles-externals-slf4j-jcl</artifactId>
            <version>1.0.33</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.5</version>
            <type>jar</type>
        </dependency>
    </dependencies>

    <!-- Build Description -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>fr.imag.adele.apam</groupId>
                <artifactId>apam-maven-plugin</artifactId>
                <version>${apam.current.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>apam-bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>



</project>