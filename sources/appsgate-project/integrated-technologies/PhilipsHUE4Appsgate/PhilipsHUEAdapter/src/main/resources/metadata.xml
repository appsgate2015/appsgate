<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
	 org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">


	<implementation name="PhilipsHUEAdapterImpl"
		classname="appsgate.lig.proxy.PhilipsHUE.PhilipsHUEAdapter" 
		specification="AppsgatePhilipsHUEAdapterSpec">

		<callback onInit="newInst" onRemove="delInst" />

		<ipojo:requires specification="appsGate.lig.manager.client.communication.service.subscribe.ListenerService"
			optional="false">
			<ipojo:callback type="bind" method="bindSubscriptionService" />
			<ipojo:callback type="unbind" method="unbindSubscriptionService" />
		</ipojo:requires>

        <ipojo:requires specification="appsGate.lig.manager.client.communication.service.send.SendWebsocketsService"
            optional="false">
            <ipojo:callback type="bind" method="bindCommunicationService" />
            <ipojo:callback type="unbind" method="unbindCommunicationService" />
        </ipojo:requires>						

	</implementation>


</apam>
