<apam xmlns="fr.imag.adele.apam" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">
                              
	<implementation name="GmailImpl" classname="appsgate.lig.mail.gmail.Gmail" specification="mail-service-specification" push="mailReceivedNotification">
	    
		<callback onInit="start" onRemove="stop" />
		
		<definition name="user" type="string" field="USER" injected="both"/>
		<definition name="password" type="string" field="PASSWORD" injected="both"/>
		<definition name="auto-refresh" type="int" field="refreshRate" injected="internal" method="autoRefreshValueChanged"/>
		
		<definition name="deviceId" 	type="string" default="666666666" field="serviceId"/>
		<definition name="userType" 	type="string" default="102"	field="userType"/>
		<definition name="status" 		type="string" default="2" 	field="status"/>
		
	</implementation>
	
