	<implementation name="CoreICalImpl" classname="appsgate.lig.agenda.core.impl.CoreiCalImpl" push="notifyEventAlarm">
		<callback onInit="newInst" onRemove="deleteInst" />
		<ipojo:requires field="serviceAdapter"/>
		
		<definition name="agendaName" type="string" field="agendaName"/>
		<definition name="account" 	  type="string" field="account"/>
		<definition name="pswd" 	  type="string" field="pswd"/>
		<definition name="rate" 	  type="string" field="rate" value="900000"/>
		
	</implementation>

 	<apam-instance name="SmartHomeAgendaInst" implementation="CoreICalImpl">
 		<property name="agendaName" value="Smart home"/>
 		<property name="account" 	value="smarthome.inria@gmail.com"/>
 		<property name="pswd" 		value="smarthome2012"/>
   </apam-instance>
   
   <apam-instance name="BoulotAgendaInst" implementation="CoreICalImpl">
 		<property name="agendaName" value="Agenda boulot"/>
 		<property name="account" 	value="smarthome.inria@gmail.com"/>
 		<property name="pswd" 		value="smarthome2012"/>
   </apam-instance>

