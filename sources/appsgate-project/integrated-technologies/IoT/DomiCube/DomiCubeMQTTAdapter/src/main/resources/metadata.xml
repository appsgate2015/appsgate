	<implementation name="DomiCubeAdapterImpl"
		classname="appsgate.lig.proxy.MQTTAdapter.DomiCubeMQTTAdapterImpl">

		<callback onInit="newInst" onRemove="delInst" />		
		
		<definition name="host"  type="string" field="host"  method="onHostChanged" />
		<definition name="port"  type="string" field="port"  method="onPortChanged"/>
		<definition name="topic" type="string" field="topic" method="onTopicChanged"/>

	</implementation>
	 
	<apam-instance implementation="DomiCubeAdapterImpl" name="DomiCubeAdapter">
		<property name="host" value="amiqual4home-data.inrialpes.fr"/>
		<property name="port" value="1883"/>
		<property name="topic" value="amiqual4home/hmi/cube/1/cube_face"/>
	</apam-instance>
 
</apam>
