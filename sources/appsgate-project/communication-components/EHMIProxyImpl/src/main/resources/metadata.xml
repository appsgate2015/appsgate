<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

	<implementation name="EHMIProxyImpl"
		classname="appsgate.lig.ehmi.impl.EHMIProxyImpl" specification="EHMIProxySpec">
		
		<callback onInit="newInst" onRemove="deleteInst" />
		
		<relation field="coreProxy" fail="exception" exception="appsgate.lig.ehmi.exceptions.CoreDependencyException" resolve="exist" />
		
		<relation field="devicePropertiesTable" creation="eager" resolve="external" />
		<relation field="placeManager" creation="eager" resolve="external" />
		<relation field="userManager" creation="eager" resolve="external" />
		<relation field="interpreter" creation="eager" resolve="external" />
		
		<relation specification="AppsgateClientCommunicationManagerSpec" resolve="exist"
			fail="exception" exception="appsgate.lig.ehmi.exceptions.ExternalComDependencyException">
			<interface field="addListenerService" />
			<interface field="sendToClientService" />
		</relation>
		
		<ipojo:requires field="httpService" />
		
		<relation push="gotNotification" multiple="true" resolve="exist" />
		
	</implementation>
	
</apam>
