<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore-0.0.4.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

	<implementation name="DeployProgramImpl" classname="appsgate.validation.configuration.eude.DeployPorgrams" singleton="true">
		<callback onInit="newInst" onRemove="deleteInst" />
		<dependency field="eude"/>
		<definition name="day" type="jeudiM, jeudiAp, vendrediM, vendrediAp, samediM, samediAp, all" method="dayChanged"/>
	</implementation>
	
	<apam-instance name="DeployProgramInst" implementation="DeployProgramImpl">
		<property name="day" value="all"/>
	</apam-instance>

</apam>