<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

	<implementation name="EUDEMediator" classname="appsgate.lig.eude.interpreter.impl.EUDEMediator" specification="EUDEInterpreterSpec" singleton="true" push="notifyChanges">
		<callback onInit="newInst" onRemove="deleteInst" />
		<relation field="router" fail="wait" resolve="exist"/>
		<relation field="contextFollower" fail="wait" resolve="exist"/>
                <relation field="context" fail="wait" resolve="external"/>
		
		<ipojo:requires field="contextHistory_pull"/>
		<ipojo:requires field="contextHistory_push"/>
	</implementation>
	
