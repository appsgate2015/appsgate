<apam xmlns="fr.imag.adele.apam" xmlns:ipojo="org.apache.felix.ipojo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="fr.imag.adele.apam http://repository-apam.forge.cloudbees.com/release/schema/ApamCore.xsd
                          org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd">

	<implementation name="OnOffActuatorImpl"
		classname="appsgate.lig.on_off.actuator.impl.OnOffAcuatorImpl" specification="OnOffActuatorSpec" push="notifyChanges">
		<callback onInit="newInst" onRemove="deleteInst" />
		
		<ipojo:requires field="enoceanProxy"/>
		
		<!-- device kernel meta data -->
		<definition name="deviceName" 		  type="string" value="Unknown" 	   field="actuatorName"/>
		<definition name="deviceId" 		  type="string" value="000000"		   field="actuatorId"/>
		<definition name="deviceType" 		  type="string" value="EnOcean_DEVICE" field="actuatorType"/>
		
		<!-- device client meta data -->
		<definition name="locationId" 		  type="string" value="-1" 			   field="locationId"/>
		<definition name="pictureId" 		  type="string" value="" 			   field="pictureId"/>
		<definition name="userType" 		  type="string" value="6" 			   field="userType"/>
		<definition name="status" 			  type="string" value="2" 			   field="status"   method="statusChanged"/>
		
		<!-- Sensor network meta data -->
		<definition name="isPaired" 		  type="string" value="false" 		   field="isPaired" method="isPairedChanged"/>
		
		<!-- device specific meta data -->
		<definition name="isOn" 			  type="string" 			 		   field="isOn" 	method="isOnChanged"/>
			
	</implementation>

</apam>