								</artifactItem>
								<artifactItem>
									<groupId>appsgate.components</groupId>
									<artifactId>EHMIProxyImpl</artifactId>
									<version>${project.version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>appsgate.components</groupId>
									<artifactId>ClientCommunicationManager</artifactId>
									<version>${project.version}</version>
								</artifactItem>
								<artifactItem>
									<groupId>appsgate.components</groupId>
									<artifactId>DevicePropertiesTableSpec</artifactId>
									<version>${project.version}</version>
